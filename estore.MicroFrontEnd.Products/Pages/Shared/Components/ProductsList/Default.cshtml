@model IEnumerable<estore.MicroFrontEnd.Products.Models.Product>

<div class="row">
    @if (Model?.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-md-4 text-center">
                <div class="card shadow rounded">
                    <div class="card-header" style="height:60px">
                        <strong>@item.Name</strong>
                    </div>
                    <div class="card-body" style="height:220px">
                        <img src="@item.ImageName" height="120" />
                        @if (!string.IsNullOrEmpty(User?.Identity?.Name))
                        {
                            <p class="m-2"><a class="btn btn-success" asp-page="Products/Details" asp-route-id="@item.Id" asp-area="Customer">Buy Now</a></p>
                        }
                        else
                        {
                            <div class="alert alert-info mt-2">
                                Sign In to purchase
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <span class="badge rounded-pill bg-danger"><h6>$@item.Cost</h6></span>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>There are no products to display</p>
    }
</div>
